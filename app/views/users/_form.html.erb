
<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, label: "Nom", label_html: { class: 'custom-label' } %>
    <%= f.input :pseudo, label: "Pseudo", label_html: { class: 'custom-label' } %>
    <%= f.input :photo, label: "URL photo de profil", label_html: { class: 'custom-label' } %>
    <%= f.input :description, label: "Description", label_html: { class: 'custom-label' } %>
    <%= f.input :verified, as: :boolean, label: "Verified", label_html: { class: 'custom-label' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary text-white' %>
  </div>
<% end %>

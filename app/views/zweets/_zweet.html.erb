<div class="container text-center my-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div id="<%= dom_id zweet %>" class="card shadow-sm">
        <div class="card-body">
          <p class="card-text">
            <%= zweet.user_id %>
          </p>
          
          <p class="card-text">
            <%= zweet.content %>
          </p>

          <p class="card-text">
            <img src="<%= zweet.image %>" class="img-fluid" alt="image" style="max-width: 100%; height: auto;">
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
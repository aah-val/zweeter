<style>
  .card {
    background-color: rgb(36, 36, 36) !important; 
    color: #fff !important;
    border: none; 
    border-radius: 10px; 
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); 
    font-family: 'Roboto', sans-serif;
  }

  .card-body {
    padding: 20px;
    text-align: left;
  }

  .card-text {
    margin-bottom: 15px;
  }

  .card-text strong {
    color: grey;
  }

  .img-fluid {
    border-radius: 10px;
  }
</style>

<div class="container text-center my-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div id="<%= dom_id zweet %>" class="card shadow-sm">
        <div class="card-body text-start">
          <p class="card-text">
            <% if zweet.user.photo.present? %>
              <span class="user-photo-badge" style="margin-right: 5px;">
          <img src="<%= zweet.user.photo %>" alt="User photo" class="rounded-circle" style="width: 35px; height: 35px;">
              </span>
            <% end %>
            <%= zweet.user.name %> 
            <% username, _domain = zweet.user.pseudo.split('@', 2) %> 
            <strong>@<%= username %></strong>
            <% if zweet.user.verified? %>
              <%= image_tag "verified.svg", class: "verified-badge", style: "width: 20px; height: 20px;" %>
            <% end %>
          </p>
          
          <p class="card-text mt-3">
            <%= zweet.content %>
          </p>
        </div>
        <div class="zweet-image justfiy-content-center">
          <% if zweet.image.present? %>
            <p class="card-image" style="position: relative;">
              <img src="<%= zweet.image %>" class="img-fluid" alt="image" style="max-width: 100%; height: auto;">
            </p>
          <% end %>
          <small style="position: absolute; bottom: 0; right: 5px; color: grey;">
                nÂ°<%= zweet.id %>
          </small>
        </div>
      </div>
    </div>
  </div>
</div>